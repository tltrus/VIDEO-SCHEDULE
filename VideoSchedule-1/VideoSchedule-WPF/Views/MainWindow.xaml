<Window x:Class="VideoSchedule_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Video Schedule Player" Height="600" Width="1100"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Add Video" 
                        Command="{Binding AddVideoCommand}"/>
                <Button Content="🗑️ Remove Video" 
                        Command="{Binding RemoveSelectedVideoCommand}"/>
                <Button Content="🗑️ Clear All" 
                        Command="{Binding ClearAllVideosCommand}"/>

                <Separator Width="20" Background="Transparent"/>

                <!-- Player Controls -->
                <Button Content="▶️ Play" 
                        Command="{Binding PlayCommand}"/>

                <Button Content="{Binding ExternalPlayerButtonText}" 
                        Command="{Binding OpenExternalPlayerCommand}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Video List -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" 
                    CornerRadius="5" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FF06D000" CornerRadius="5,5,0,0"
                            Padding="10">
                        <TextBlock Text="Video List" Foreground="White" 
                                   FontSize="14" FontWeight="Bold"/>
                    </Border>

                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding Videos}"
                              SelectedItem="{Binding SelectedVideo, Mode=TwoWay}"
                              SelectionMode="Single" 
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="File Name" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FileName}" 
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding FilePath}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Size" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FileSizeFormatted}"
                                                       HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Added" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DateAddedFormatted}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Border Grid.Row="2" Background="#E3F2FD" 
                            CornerRadius="0,0,5,5" Padding="10">
                        <TextBlock Text="{Binding VideoCountText}" HorizontalAlignment="Right"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" ShowsPreview="True"/>

            <!-- Schedule -->
            <Border Grid.Column="2" BorderBrush="#CCCCCC" BorderThickness="1" 
                    CornerRadius="5" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#4CAF50" CornerRadius="5,5,0,0"
                            Padding="10">
                        <TextBlock Text="Playback Schedule" 
                                   Foreground="White" FontSize="14" FontWeight="Bold"/>
                    </Border>

                    <Border Grid.Row="0" Padding="10" BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,0,1" Background="#F5F5F5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Start Time:" 
                                       Margin="5" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Text="{Binding TimeInput, UpdateSourceTrigger=PropertyChanged}" 
                                     />

                            <Button Grid.Column="2" Content="➕ Add" 
                                    Command="{Binding AddScheduleCommand}"
                                    Margin="10,0,0,0"/>
                            
                            <Button Grid.Column="3" Content="🗑️ Remove from Schedule" 
                                    Command="{Binding RemoveFromScheduleCommand}" 
                                    Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding ScheduleItems}"
                              SelectedItem="{Binding SelectedSchedule, Mode=TwoWay}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Time" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding StartTimeFormatted}"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Video" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Video.FileName}" 
                                                       TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Active" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsActive, Mode=TwoWay}" 
                                                      HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="" Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="❌" Width="30" Height="30"
                                                    Command="{Binding DataContext.RemoveScheduleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" 
                                                    BorderThickness="0"
                                                    ToolTip="Remove from schedule"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Remove selected from schedule button -->
                    <Border Grid.Row="2" Background="#E8F5E8" Padding="10" 
                            CornerRadius="0,0,5,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Status}" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F5F5F5">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Current Time: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentDateTime}" 
                               Foreground="#2196F3" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Next: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding NextScheduleInfo}" 
                               Foreground="#4CAF50"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding PlayerStatus}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>